<Window x:Class="WPFZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="497">
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="22,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listZoos" HorizontalAlignment="Left" Height="220" Margin="22,46,0,0" VerticalAlignment="Top" Width="130" SelectionChanged="listZoos_SelectionChanged"/>

        <Label Content="Associated Animals List" HorizontalAlignment="Left" Margin="181,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listAssociatedAnimals" HorizontalAlignment="Left" Height="220" Margin="181,46,0,0" VerticalAlignment="Top" Width="130"/>

        <ListBox x:Name="listAllAnimals" HorizontalAlignment="Left" Height="327" Margin="340,46,0,0" VerticalAlignment="Top" Width="130"/>
        <Button Content="Delete Zoo" HorizontalAlignment="Left" Height="29" Margin="22,271,0,0" VerticalAlignment="Top" Width="130" Click="DeleteZoo_Click"/>
        <Button Content="Remove Animal" HorizontalAlignment="Left" Height="29" Margin="181,271,0,0" VerticalAlignment="Top" Width="130" Click="RemoveAnimal_Click"/>
        <Button Content="Add Animal Zoo" HorizontalAlignment="Left" Height="29" Margin="181,344,0,0" VerticalAlignment="Top" Width="130" Click="Add_Animal_Zoo_Click"/>
        <Button Content="Update Animal" HorizontalAlignment="Left" Height="29" Margin="181,378,0,0" VerticalAlignment="Top" Width="130" Click="UpdateAnimal_Click"/>
        <Button Content="Delete Animal" HorizontalAlignment="Left" Height="30" Margin="340,378,0,0" VerticalAlignment="Top" Width="130" Click="DeleteAnimal_Click"/>
        <Button Content="Add Animal to Zoo" HorizontalAlignment="Left" Height="30" Margin="340,13,0,0" VerticalAlignment="Top" Width="130" Click="Add_Animal_To_Zoo_Click"/>
        <Button Content="Add Zoo" HorizontalAlignment="Left" Height="29" Margin="22,344,0,0" VerticalAlignment="Top" Width="130" Click="AddZoo_Click"/>
        <Button Content="Update Zoo" HorizontalAlignment="Left" Height="29" Margin="22,378,0,0" VerticalAlignment="Top" Width="130" Click="UpdateZoo_Click"/>
        
        <TextBox Name="txtBox_Add" HorizontalAlignment="Left" Height="34" Margin="22,305,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="289"/>
    </Grid>
</Window>
