<Window x:Class="WPFZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="725
        ">
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="22,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listZoos" HorizontalAlignment="Left" Height="220" Margin="22,46,0,0" VerticalAlignment="Top" Width="105" SelectionChanged="listZoos_SelectionChanged"/>

        <Label Content="Associated Animals List" HorizontalAlignment="Left" Margin="154,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listAssociatedAnimals" HorizontalAlignment="Left" Height="220" Margin="154,46,0,0" VerticalAlignment="Top" Width="133"/>

        <Label Content="Animals" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listAllAnimals" HorizontalAlignment="Left" Height="327" Margin="311,46,0,0" VerticalAlignment="Top" Width="136"/>

    </Grid>
</Window>
